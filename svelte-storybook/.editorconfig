# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 2

# Some languages prefer 4 spaces
[{*.py,*.pyw,*.sh,*.xml}]
indent_size = 4
indent_style = space

# Some languages need spaces
[{*.json}]
indent_size = 4
indent_style = space

[{*.go,go.mod,go.sum}]
indent_style = tab

# We use tabs in Go
[{*.go,go.mod,go.sum}]
indent_style = tab

# Lets not trim Markdown
[*.md]
trim_trailing_whitespace = false
