{
  "name": "snowpack-svelte-template",
  "version": "0.1.0",
  "description": "TODO",
  "license": "MIT",
  "author": "Matt Cook <matt@sciencefidelity.co.uk>",
  "private": true,
  "scripts": {
    "dev": "snowpack dev",
    "build": "snowpack build",
    "serve": "serve build -l 8080",
    "clean": "rm -rf build && yarn snowpack --reload",
    "lint": "concurrently 'yarn:lint:*'",
    "lint:js": "eslint '**/*.{ts,js,svelte}'",
    "lint:prettier": "prettier --check --plugin-search-dir=. '**/*.{ts,js,json,md,yml,svelte}'",
    "lint:styles": "stylelint '**/*.{svelte,scss}' --ignore-path .eslintignore",
    "fix": "concurrently 'yarn:fix:*'",
    "fix:js": "eslint --fix '**/*.{ts,js}'",
    "fix:prettier": "prettier --write '**/*.{ts,js,json,md,yml,svelte}'",
    "fix:styles": "stylelint --fix '**/*.{svelte,scss}' --ignore-path .eslintignore",
    "test": "echo \"This template does not include a test runner.\" && exit 1"
  },
  "dependencies": {
    "sanitize.css": "^13.0.0",
    "svelte": "^3.44.3",
    "svelte-routing": "^1.6.0"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.2.0",
    "@snowpack/plugin-sass": "^1.4.0",
    "@snowpack/plugin-svelte": "^3.7.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@tsconfig/svelte": "^3.0.0",
    "@types/snowpack-env": "^2.3.4",
    "concurrently": "^6.5.1",
    "postcss": "^8.4.5",
    "postcss-html": "^1.3.0",
    "postcss-scss": "^4.0.2",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.1",
    "serve": "^13.0.2",
    "snowpack": "^3.8.8",
    "stylelint": "^14.2.0",
    "stylelint-config-html": "^1.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.1.0",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "svelte-preprocess": "^4.10.1",
    "typescript": "^4.5.4"
  }
}
