{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "sourceMap": true,
    "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "checkJs": true,
      "types": ["snowpack-env"],
      "paths": { "@/*": ["./src"] }
    },
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.svelte"]
}
